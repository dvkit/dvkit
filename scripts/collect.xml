	<!-- - - - - - - - - - - - - - - - - - 
          target: name                      
         - - - - - - - - - - - - - - - - - -->
    <target name="collect" 
    	depends="init,collect_eclipse,collect_cdt,collect_wst,
    	collect_emf,collect_dltk,collect_zest,collect_vrapper,
    	collect_sveditor,collect_elt,collect_shelled,
    	collect_linuxtools,collect_wixtools">
            
