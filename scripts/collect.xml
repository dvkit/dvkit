	<target name="collect_sveditor" if="${fetch.sveditor}">
		<delete file="${packages_dir}/${sveditor_zip}"/>
		<exec executable="wget"
			failonerror="true"
			dir="${packages_dir}">
			<arg value="-nv"/>
			<arg value="-O"/>
			<arg value="${sveditor_zip}"/>
			<arg value="${sveditor_release}"/>
		</exec>
	</target>
	
</project>